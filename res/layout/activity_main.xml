<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res/com.ryb.weight"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ryb.weight.model.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.ryb.weight.model.TitleLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#aaaaaa"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date_year"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:gravity="right|bottom"
            android:paddingRight="10dp"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:gravity="left|bottom"
            android:paddingLeft="10dp"
            android:text="83.3"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#aaaaaa"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date_month"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:gravity="right|top"
            android:paddingRight="10dp"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/kg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ff00ff"
            android:gravity="left|top"
            android:paddingLeft="10dp"
            android:text="Kg"
            android:textSize="30dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dip"
        android:background="#aaaaaa" >

        <com.ryb.weight.view.RoundProgressBar
            android:id="@+id/roundProgressBar2"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerHorizontal="true"
            android_custom:roundColor="#D1D1D1"
            android_custom:roundProgressColor="@android:color/black"
            android_custom:roundWidth="10dip"
            android_custom:textColor="#9A32CD"
            android_custom:textIsDisplayable="false"
            android_custom:textSize="18sp" />
    </RelativeLayout>

    <com.ryb.weight.view.BodyMassIndex
        android:id="@+id/bodyMassIndex"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true" />

</LinearLayout>